public class StaticList {
    private int[] data;  
    private int size;   
    private int capacity; 

    public StaticList(int capacity) {
        this.capacity = capacity;
        this.data = new int[capacity];
        this.size = 0;
    }

    public void clear() {
        this.size = 0;
        System.out.println("Lista foi esvaziada.");
    }

    public void add(int value) {
        if (isFull()) {
            System.out.println("A lista está cheia. Não é possível adicionar.");
            return;
        }
        data[size++] = value;
    }

    public void add(int value, int pos) {
        if (isFull()) {
            System.out.println("A lista está cheia. Não é possível adicionar.");
            return;
        }
        if (pos < 0 || pos > size) {
            System.out.println("Posição inválida.");
            return;
        }
        for (int i = size; i > pos; i--) {
            data[i] = data[i - 1]; 
        }
        data[pos] = value;
        size++;
    }

    public int remove(int pos) {
        if (isEmpty()) {
            System.out.println("A lista está vazia. Não há elementos para remover.");
            return -1;
        }
        if (pos < 0 || pos >= size) {
            System.out.println("Posição inválida.");
            return -1;
        }
        int removedValue = data[pos];
        for (int i = pos; i < size - 1; i++) {
            data[i] = data[i + 1];  
        }
        size--;
        return removedValue;
    }

    public boolean isEmpty() {
        return size == 0;
    }

    public boolean isFull() {
        return size == capacity;
    }

    public void setData(int value, int pos) {
        if (pos < 0 || pos >= size) {
            System.out.println("Posição inválida.");
            return;
        }
        data[pos] = value;
    }

    public int getData(int pos) {
        if (pos < 0 || pos >= size) {
            System.out.println("Posição inválida.");
            return -1;
        }
        return data[pos];
    }

    public int getSize() {
        return size;
    }

    public int find(int value) {
        for (int i = 0; i < size; i++) {
            if (data[i] == value) {
                return i;
            }
        }
        return -1; 
    }
}
